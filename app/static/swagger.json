{
    "swagger": "2.0",
    "info": {
        "title": "Medical Backend API",
        "description": "API for managing medical backend (Auth, Admin, Doctors)",
        "version": "1.0.0"
    },
    "basePath": "/",
    "schemes": [
        "http"
    ],
    "securityDefinitions": {
        "Bearer": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    },
    "paths": {
        "/auth/register": {
            "post": {
                "summary": "Register a new user",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                },
                                "name": {
                                    "type": "string"
                                },
                                "role": {
                                    "type": "string",
                                    "enum": [
                                        "admin",
                                        "doctor",
                                        "member"
                                    ]
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "User created"
                    },
                    "409": {
                        "description": "User already exists"
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "summary": "Login user",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Login successful",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "token": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid credentials"
                    }
                }
            }
        },
        "/api/availability": {
            "post": {
                "summary": "Create or update doctor availability (Doctor only)",
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "day_of_week": {
                                    "type": "integer",
                                    "description": "0=Mon, 6=Sun"
                                },
                                "start_time": {
                                    "type": "string",
                                    "example": "09:00"
                                },
                                "end_time": {
                                    "type": "string",
                                    "example": "17:00"
                                },
                                "slot_duration_minutes": {
                                    "type": "integer",
                                    "default": 30
                                },
                                "is_active": {
                                    "type": "boolean",
                                    "default": true
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Availability updated"
                    },
                    "403": {
                        "description": "Only doctors can set availability"
                    }
                }
            }
        },
        "/api/availability/{doctor_id}": {
            "get": {
                "summary": "Get availability for a specific doctor",
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "parameters": [
                    {
                        "name": "doctor_id",
                        "in": "path",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of availabilities"
                    }
                }
            }
        },
        "/api/appointments": {
            "post": {
                "summary": "Book an appointment (Member only)",
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "doctor_id": {
                                    "type": "integer"
                                },
                                "date": {
                                    "type": "string",
                                    "format": "date",
                                    "example": "2024-01-30"
                                },
                                "start_time": {
                                    "type": "string",
                                    "example": "09:00"
                                },
                                "reason": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Appointment booked"
                    },
                    "409": {
                        "description": "Conflict (already booked or double booking)"
                    },
                    "400": {
                        "description": "Validation error or doctor unavailable"
                    }
                }
            },
            "get": {
                "summary": "Get appointments for current user",
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of appointments"
                    }
                }
            }
        },
        "/admin/departments": {
            "get": {
                "summary": "List all departments",
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "List of departments"
                    }
                }
            },
            "post": {
                "summary": "Create a new department",
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Department created"
                    },
                    "403": {
                        "description": "Permission denied"
                    }
                }
            }
        },
        "/admin/doctors": {
            "post": {
                "summary": "Onboard a new doctor",
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                },
                                "name": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Doctor onboarded"
                    }
                }
            }
        },
        "/admin/assign-doctor": {
            "post": {
                "summary": "Assign a doctor to a department",
                "security": [
                    {
                        "Bearer": []
                    }
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "doctor_id": {
                                    "type": "integer"
                                },
                                "department_id": {
                                    "type": "integer"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Assignment successful"
                    }
                }
            }
        }
    }
}